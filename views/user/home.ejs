<%- include('../partials/head.ejs') %>

    <body class="bg-gray-50 font-inter">
        <%- include('../partials/navbar.ejs', { isAdmin: false }) %>

            <div class="min-h-screen">
                <!-- Hero Section -->
                <div class="invoice-bg text-white py-16">
                    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
                        <h1 class="text-4xl font-bold mb-4">
                            <i class="fas fa-file-invoice-dollar mr-3"></i>
                            Welcome to Krushiyuga Invoice Portal
                        </h1>
                        <p class="text-xl text-blue-100 mb-8">
                            Access your invoices and manage your agricultural business transactions
                        </p>

                        <!-- Search Form -->
                        <div class="max-w-md mx-auto">
                            <form action="/user/search" method="POST"
                                class="flex bg-white rounded-lg overflow-hidden shadow-lg">
                                <input type="email" name="email" placeholder="Enter your email to view invoices..."
                                    class="flex-1 px-4 py-3 text-gray-700 focus:outline-none" value="<%= searchEmail %>"
                                    required>
                                <button type="submit"
                                    class="bg-green-600 hover:bg-green-700 px-6 py-3 text-white font-medium transition-colors">
                                    <i class="fas fa-search"></i>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Main Content -->
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
                    <!-- Alerts -->
                    <% if (typeof error !=='undefined' && error) { %>
                        <div class="alert alert-error">
                            <i class="fas fa-exclamation-circle mr-2"></i>
                            <%= error %>
                        </div>
                        <% } %>

                            <% if (typeof success !=='undefined' && success) { %>
                                <div class="alert alert-success">
                                    <i class="fas fa-check-circle mr-2"></i>
                                    <%= success %>
                                </div>
                                <% } %>

                                    <!-- Invoices Section -->
                                    <% if (invoices && invoices.length> 0) { %>
                                        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
                                            <div class="px-6 py-4 bg-gray-50 border-b border-gray-200">
                                                <h2 class="text-lg font-semibold text-gray-800">
                                                    <i class="fas fa-list-alt mr-2"></i>
                                                    Your Invoices (<%= invoices.length %>)
                                                </h2>
                                                <p class="text-sm text-gray-600 mt-1">Invoices for: <%= searchEmail %>
                                                </p>
                                            </div>

                                            <div class="overflow-x-auto">
                                                <table class="min-w-full divide-y divide-gray-200">
                                                    <thead class="bg-gray-50">
                                                        <tr>
                                                            <th
                                                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                                Invoice #
                                                            </th>
                                                            <th
                                                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                                Date
                                                            </th>
                                                            <th
                                                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                                Amount
                                                            </th>
                                                            <th
                                                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                                Status
                                                            </th>
                                                            <th
                                                                class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                                                                Actions
                                                            </th>
                                                        </tr>
                                                    </thead>
                                                    <tbody class="bg-white divide-y divide-gray-200">
                                                        <% invoices.forEach(invoice=> { %>
                                                            <tr class="hover:bg-gray-50">
                                                                <td class="px-6 py-4 whitespace-nowrap">
                                                                    <div class="text-sm font-medium text-gray-900">
                                                                        <%= invoice.invoiceNumber %>
                                                                    </div>
                                                                </td>
                                                                <td class="px-6 py-4 whitespace-nowrap">
                                                                    <div class="text-sm text-gray-900">
                                                                        <%= new
                                                                            Date(invoice.createdAt).toLocaleDateString()
                                                                            %>
                                                                    </div>
                                                                </td>
                                                                <td class="px-6 py-4 whitespace-nowrap">
                                                                    <div class="text-sm font-medium text-gray-900">
                                                                        ₹<%= invoice.totalAmount.toFixed(2) %>
                                                                    </div>
                                                                </td>
                                                                <td class="px-6 py-4 whitespace-nowrap">
                                                                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                                                <%= invoice.status === 'paid' ? 'bg-green-100 text-green-800' : 
                                                    invoice.status === 'sent' ? 'bg-blue-100 text-blue-800' :
                                                    invoice.status === 'draft' ? 'bg-yellow-100 text-yellow-800' :
                                                    'bg-red-100 text-red-800' %>">
                                                                        <i class="fas fa-circle mr-1 text-xs"></i>
                                                                        <%= invoice.status.charAt(0).toUpperCase() +
                                                                            invoice.status.slice(1) %>
                                                                    </span>
                                                                </td>
                                                                <td
                                                                    class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                                                    <a href="/user/invoices/<%= invoice._id %>?email=<%= encodeURIComponent(searchEmail) %>"
                                                                        class="text-blue-600 hover:text-blue-900 mr-3">
                                                                        <i class="fas fa-eye mr-1"></i> View
                                                                    </a>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>

                                            <!-- Summary -->
                                            <div class="px-6 py-4 bg-gray-50 border-t border-gray-200">
                                                <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                                    <div class="text-center">
                                                        <div class="text-2xl font-bold text-blue-600">
                                                            ₹<%= invoices.reduce((sum, inv)=> sum + inv.totalAmount,
                                                                0).toFixed(2) %>
                                                        </div>
                                                        <div class="text-sm text-gray-600">Total Amount</div>
                                                    </div>
                                                    <div class="text-center">
                                                        <div class="text-2xl font-bold text-green-600">
                                                            <%= invoices.filter(inv=> inv.status === 'paid').length %>
                                                        </div>
                                                        <div class="text-sm text-gray-600">Paid Invoices</div>
                                                    </div>
                                                    <div class="text-center">
                                                        <div class="text-2xl font-bold text-orange-600">
                                                            <%= invoices.filter(inv=> inv.status === 'sent').length %>
                                                        </div>
                                                        <div class="text-sm text-gray-600">Pending Invoices</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <% } else if (searchEmail) { %>
                                            <!-- No Invoices Found -->
                                            <div class="bg-white rounded-lg shadow-lg p-8 text-center">
                                                <div class="text-gray-400 mb-4">
                                                    <i class="fas fa-inbox text-6xl"></i>
                                                </div>
                                                <h3 class="text-lg font-medium text-gray-900 mb-2">No Invoices Found
                                                </h3>
                                                <p class="text-gray-600 mb-4">
                                                    We couldn't find any invoices for the email address: <strong>
                                                        <%= searchEmail %>
                                                    </strong>
                                                </p>
                                                <p class="text-sm text-gray-500">
                                                    Please check your email address or contact our support team if you
                                                    believe this is an error.
                                                </p>
                                            </div>
                                            <% } else { %>
                                                <!-- Welcome Message -->
                                                <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                                                    <!-- Feature Cards -->
                                                    <div class="bg-white rounded-lg shadow-lg p-6 text-center">
                                                        <div class="text-blue-600 mb-4">
                                                            <i class="fas fa-search text-4xl"></i>
                                                        </div>
                                                        <h3 class="text-lg font-semibold text-gray-900 mb-2">Search
                                                            Invoices</h3>
                                                        <p class="text-gray-600 text-sm">
                                                            Enter your email address to quickly find all invoices
                                                            associated with your account.
                                                        </p>
                                                    </div>

                                                    <div class="bg-white rounded-lg shadow-lg p-6 text-center">
                                                        <div class="text-green-600 mb-4">
                                                            <i class="fas fa-file-alt text-4xl"></i>
                                                        </div>
                                                        <h3 class="text-lg font-semibold text-gray-900 mb-2">View
                                                            Details</h3>
                                                        <p class="text-gray-600 text-sm">
                                                            Access detailed invoice information including items,
                                                            amounts, and payment status.
                                                        </p>
                                                    </div>

                                                    <div class="bg-white rounded-lg shadow-lg p-6 text-center">
                                                        <div class="text-purple-600 mb-4">
                                                            <i class="fas fa-download text-4xl"></i>
                                                        </div>
                                                        <h3 class="text-lg font-semibold text-gray-900 mb-2">Download
                                                            PDF</h3>
                                                        <p class="text-gray-600 text-sm">
                                                            Download professional PDF versions of your invoices for your
                                                            records.
                                                        </p>
                                                    </div>
                                                </div>

                                                <!-- Contact Information -->
                                                <div class="mt-12 bg-white rounded-lg shadow-lg p-8">
                                                    <div class="text-center mb-6">
                                                        <h2 class="text-2xl font-bold text-gray-900 mb-2">Need Help?
                                                        </h2>
                                                        <p class="text-gray-600">Contact our support team for assistance
                                                        </p>
                                                    </div>

                                                    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 text-center">
                                                        <div>
                                                            <i class="fas fa-phone text-2xl text-blue-600 mb-2"></i>
                                                            <div class="font-medium text-gray-900">Phone</div>
                                                            <div class="text-gray-600">+91 9876543210</div>
                                                        </div>
                                                        <div>
                                                            <i class="fas fa-envelope text-2xl text-green-600 mb-2"></i>
                                                            <div class="font-medium text-gray-900">Email</div>
                                                            <div class="text-gray-600">info@krushiyuga.com</div>
                                                        </div>
                                                        <div>
                                                            <i class="fas fa-clock text-2xl text-purple-600 mb-2"></i>
                                                            <div class="font-medium text-gray-900">Hours</div>
                                                            <div class="text-gray-600">Mon-Fri 9AM-6PM</div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <% } %>
                </div>
            </div>

            <!-- Footer -->
            <footer class="bg-gray-800 text-white py-8 mt-12">
                <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
                    <div class="mb-4">
                        <h3 class="text-lg font-bold text-green-400">
                            <i class="fas fa-seedling mr-2"></i>KRUSHIYUGA
                        </h3>
                        <p class="text-gray-400 text-sm">Agricultural Solutions & Services</p>
                    </div>
                    <div class="text-gray-400 text-sm">
                        &copy; <%= new Date().getFullYear() %> Krushiyuga. All rights reserved.
                    </div>
                </div>
            </footer>
    </body>

    </html>